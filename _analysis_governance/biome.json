{
	"$schema": "https://biomejs.dev/schemas/2.3.12/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"includes": [
			"**/*",
			"!!**/*.py",
			"!!**/*.md",
			"!!**/*.yaml",
			"!!**/*.yml",
			"!!**/*.toml",
			"!!**/dist",
			"!!**/build",
			"!!**/generated",
			"!!**/.venv",
			"!!**/node_modules"
		]
	},
	"formatter": { "enabled": true },
	"linter": { "enabled": true },

	"css": {
		"formatter": { "enabled": true }
	},

	"html": {
		"formatter": { "enabled": true },
		"experimentalFullSupportEnabled": true
	}
}
